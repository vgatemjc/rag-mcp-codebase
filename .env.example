# Container defaults (FastAPI / MCP)
QDRANT_URL=http://qdrant:6333
EMB_BASE_URL=http://embedding-tei:8080/v1
EMB_MODEL=text-embedding-3-large
OLLAMA_URL=http://ollama:11434
COLLECTION_CODE=code_chunks
COLLECTION_FUNCS=functions
CHUNK_TOKENS=512
CHUNK_OVERLAP=64
CHARS_PER_TOKEN_EST=1.5
CHUNK_TOKEN_FRACTION=0.6
SUPPORTED_LANGS=python,typescript,javascript,java,go,cpp,c,rs,kt,swift
OPENAI_API_KEY=
QDRANT_UPSERT_BATCH=128
QDRANT_TIMEOUT=30
# 시나리오별 REPO_ROOT 지정
REPO_ROOT=/workspace # A
# REPO_ROOT=/repos # B
# B 전용 Git 설정(필요 시)
GIT_HTTP_USERNAME=
GIT_HTTP_PASSWORD=
WEBHOOK_SECRET=

# Host exports consumed by docker-compose.* to bridge into containers
QDRANT_ENDPOINT=http://localhost:6333
EMB_ENDPOINT=http://localhost:8080/v1
# EMB_MODEL (defined above) is reused for the rag compose stack; override it there when switching providers
HOST_REPO_PATH=/absolute/path/to/repo # must be an absolute path for volume mounts
RAG_SERVER_ENDPOINT=http://localhost:8000
OLLAMA_ENDPOINT=http://localhost:11434
